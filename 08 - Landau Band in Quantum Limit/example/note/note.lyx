reference "eq:-1"

\end_inset

) can are written as:
\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
\langle n|H|n\rangle=DiagForm\left[\begin{array}{c}
E_{g}-2V_{\text{ggd}}+\big(B(2n+1)-4\big)V_{\text{ggp}}\\
E_{g}+(\frac{2n+1}{2}B-2)V_{\text{ggd}}+(\frac{2n+1}{2}B-4)V_{\text{ggp}}\\
E_{g}+(\frac{2n+1}{2}B-2)V_{\text{ggd}}+(\frac{2n+1}{2}B-4)V_{\text{ggp}}\\
E_{f}+((2n+1)B-4)V_{\text{ffp}}-(\frac{2n+1}{2}B-4)(V_{\text{ffd}}+V_{\text{ffp}})\\
E_{f}+((2n+1)B-4)V_{\text{ffp}}-(\frac{2n+1}{2}B-4)(V_{\text{ffd}}+V_{\text{ffp}})\\
E_{f}-4V_{\text{ffp}}-(B(2n+1)-4)(V_{\text{ffd}}+V_{\text{ffp}})
\end{array}\right]
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
\langle n|H|n+1\rangle=2i(V_{\text{fgd}}+V_{\text{ggp}})\left[\begin{array}{cccccc}
0 & 0 & 0 & -i\sqrt{B(n+1)/2} & -\sqrt{B(n+1)/2} & 0\\
0 & 0 & 0 & 0 & 0 & -i\sqrt{B(n+1)/2}\\
0 & 0 & 0 & 0 & 0 & -\sqrt{B(n+1)/2}\\
i\sqrt{B(n+1)/2} & 0 & 0 & 0 & 0 & 0\\
\sqrt{B(n+1)/2} & 0 & 0 & 0 & 0 & 0\\
0 & i\sqrt{B(n+1)/2} & \sqrt{B(n+1)/2} & 0 & 0 & 0
\end{array}\right]
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
\langle n|H|n+2\rangle=DiagForm\left[\begin{array}{c}
0\\
\frac{B\sqrt{(n+1)(n+2)}}{2}V_{\text{ggd}}-\frac{B\sqrt{(n+1)(n+2)}}{2}V_{\text{ggp}}\\
\frac{-B\sqrt{(n+1)(n+2)}}{2}V_{\text{ggd}}+\frac{B\sqrt{(n+1)(n+2)}}{2}V_{\text{ggp}}\\
B\sqrt{(n+1)(n+2)}V_{\text{ffp}}+\frac{B\sqrt{(n+1)(n+2)}}{2}(V_{\text{ffd}}+V_{\text{ffp}})\\
-B\sqrt{(n+1)(n+2)}V_{\text{ffp}}-(\frac{B\sqrt{(n+1)(n+2)}}{2})(V_{\text{ffd}}+V_{\text{ffp}})\\
0
\end{array}\right]
\]

\end_inset


\end_layout

